<style>
    @font-face {
        font-family: 'Roboto', sans-serif;
        src: local('Roboto'), url('path/to/Roboto.woff2') format('woff2');
    }

    html, body {
        font-family: 'Roboto', sans-serif;
        margin: 0;
        background-color: #111; /* Darker black */
        color: #eee; /* Brighter white text color */
    }

    h1 {
        text-align: center;
        padding: 20px 0;
        font-size: 28px; /* Increased font size */
        font-weight: bold;
        color: #990000; /* Dark red */
        text-decoration: underline; /* Underline */
        font-family: 'Arial', sans-serif; /* Different font */
    }

    table {
        width: 100%;
        border-collapse: collapse;
        page-break-inside: avoid;
        color: #eee; /* Brighter white text color for the table */
    }

    th, td {
        border: 1px solid #333; /* Dark gray border */
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #550000; /* Darker red for header background */
        color: #eee; /* Brighter white text color for header */
    }

    tr:nth-child(even) {
        background-color: #333; /* Dark gray background for even rows */
    }

    tr:nth-child(odd) {
        background-color: #444; /* Darker gray background for odd rows */
    }

    .actions {
        text-align: center;
    }

    .badge {
        display: inline-block;
        background-color: #333; /* Dark gray background for badges */
        color: #eee; /* Brighter white text color for badges */
        border: 1px solid #555; /* Darker gray border for badges */
        padding: 5px 10px;
        border-radius: 3px;
        margin-right: 5px;
        text-decoration: none;
    }

    .badge:hover {
        background-color: #444; /* Darker gray background for badges on hover */
    }

    .action-link {
        color: #ff0000; /* Bright red for action links */
        text-decoration: none;
        margin: 0 5px;
    }

    .action-link:hover {
        text-decoration: underline;
    }

    table thead, table tfoot {
        background-color: #550000; /* Darker red for header/footer background */
        font-weight: bold;
    }

    table thead tr th:first-child, table tfoot tr th:first-child {
        text-align: left;
    }
</style>

<h1>Events list</h1>
<body>
<div class="table-responsive">
    <table class="table app-table-hover mb-0 text-left">
        <thead>
        <tr>
            <th>Id_event</th>
            <th>Titre_event</th>
            <th>Prix_event</th>
            <th>Nbr_personnes</th>
            <th>Description_event</th>
            <th>Date_event</th>
            <th>Etat_event</th>
            <th>Lieu_event</th>
            <th>Categorie</th>
        </tr>
        </thead>
        <tbody>
        {% for event in event %}
            <tr>
                <td>{{ event.IdEvent }}</td>
                <td>{{ event.TitreEvent }}</td>
                <td>{{ event.PrixEvent }}</td>
                <td>{{ event.DescriptionEvent }}</td>
                <td>{{ event.NbrPersonnes }}</td>
                <td>{{ event.DateEvent ? event.DateEvent|date('Y-m-d H:i:s') : ''}}</td>
                <td>{{ event.EtatEvent }}</td>
                <td>{{ event.LieuEvent }}</td>
                <td>{{ event.CategorieEvent }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" style="text-align: center;">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</body>