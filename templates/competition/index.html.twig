                <a href="{{ path('app_competition_pdf') }}" class="btn btn-primary">PDF</a>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Trier Par Nom
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('triC', {'tri': 'asc'}) }}">Croissant</a></li>
                        <li><a class="dropdown-item" href="{{ path('triC', {'tri': 'desc'}) }}">Décroissant</a></li>
                    </ul>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                    <tr class="text-white">
                        <th scope="col">Id</th>
                        <th scope="col">Competition</th>
                        <th scope="col">Description</th>
                        <th scope="col">Date</th>
                        <th scope="col">Hour</th>
                        <th scope="col">Type</th>
                        <th scope="col">Game</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for competition in competitions %}

                    <tr class="text-white">
                        <td>{{ competition.id }}</td>
                        <td>{{ competition.nomC }}</td>
                        <td>{{ competition.descriptionC }}</td>
                        <td>{{ competition.dateC ? competition.dateC|date('Y-m-d') : '' }}</td>
                        <td>{{ competition.heureC ? competition.heureC|date('H:i:s') : '' }}</td>
                        <td><img src="{{ asset(competition.jeuC) }}" alt=" Image" class="img-thumbnail" width="100"></td>

                        <td>{{ competition.typeC }}</td>
                        <td>
                            <a href="{{ path('app_competition_delete', {'id': competition.id}) }}" onClick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                            <a href="{{ path('app_competition_edit', {'id': competition.id}) }}">Edit</a>

                        </td>
                    </tr>
                    </tbody>
                    {% else %}
                        <tr>
                            <td colspan="7">no records found</td>
                        </tr>
                    {% endfor %}
                </table>
                </tbody>
                </table>
            </div>



