<html lang="en">
<head>
    <script src="https://cdn.jsdelivr.net/npm/echarts@5.1.1/dist/echarts.min.js"></script>
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-color: #8b0000;
        }

        .section {
            padding: 20px;
            margin-left: 1px; /* Adjust the left margin as needed */
        }

        .row {
            width: 150%;
            display: flex;
            justify-content: flex-start;
        }

        .col-lg-4 {
            flex: 0 0 30%; /* Adjust the width as needed */
            margin: 10px;

        }

        .card {
            border: 1px solid #ccc;
            border-radius: 8px;
            overflow: hidden;

        }

        .card-body {
            padding: 20px;

        }

        .card-title {
            font-size: 1.2rem;
            margin-bottom: 15px;
        }

        .echart {
            min-height: 500px;
            min-width: 400px;

        }
    </style>
</head>

<body>
<section class="section">
    <div class="row">
        <div class="col-lg-4">
            <!-- Chart 1 -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Produits par Catégorie et Tag</h5>
                    <a href="{{ path('app_produit_index') }}" class="btn"></a>
                    <div id="produitStatChart" class="echart"></div>
                    <script>
                        document.addEventListener("DOMContentLoaded", () => {
                            const statistiques = JSON.parse('{{ statistiques | json_encode | raw }}');

                            const data = statistiques.map(stat => ({
                                value: stat.totalProduits,
                                name: `${stat.categorie} - ${stat.tag}`
                            }));

                            echarts.init(document.querySelector("#produitStatChart")).setOption({
                                tooltip: {
                                    trigger: 'item'
                                },
                                legend: {
                                    top: '5%',
                                    left: 'center'
                                },
                                series: [{
                                    name: 'Produits par Catégorie et Tag',
                                    type: 'pie',
                                    radius: ['40%', '70%'],
                                    avoidLabelOverlap: false,
                                    label: {
                                        show: false,
                                        position: 'center'
                                    },
                                    emphasis: {
                                        label: {
                                            show: true,
                                            fontSize: '18',
                                            fontWeight: 'bold'
                                        }
                                    },
                                    labelLine: {
                                        show: false
                                    },
                                    data: data
                                }]
                            });
                        });
                    </script>
                </div>
            </div>
        </div>
        <!-- Add more charts as needed -->
    </div>
</section>
</body>
</html>