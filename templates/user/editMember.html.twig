{% extends 'home/front/form.html.twig' %}
{% block body %}
    {{form_start(form,{'attr':{'novalidate': 'novalidate'}})}}
    <div class="container-fluid">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <a href="{{ path('front') }}" class="" >
                            <h3 class="text-primary"><img src="{{ asset('front_office/img/Al3ab/al3ab_blanc.png') }} " width="20%" height="20%" alt="">Modify You Account</h3>
                        </a>
                    </div>
                    {{ form_row(form.email, {attr: {'class': 'form-control', 'placeholder': 'Email', 'autocomplete': 'email'}}) }}
                    {{ form_row(form.username, {attr: {'class': 'form-control', 'placeholder': 'Username', 'autocomplete': 'username', 'value': user.getUserIdentifierNom()}}) }}
                    <div class="form-floating mb-4">
                        <div class="form-floating mb-4">
                            {{ form_row(form.ImagePath, {attr: {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="text-center mb-0">
                        {{ form_row(form.Submit, {attr: {'class': 'btn btn-primary py-3 w-100 mb-4'} }) }}
                        {% if form_errors(form) %}
                            <div class="">
                                {{ form_errors(form) }} </div>
                        {% endif %}
                        {{ form_end(form)}}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}