{% extends 'home/front/form.html.twig' %}

{% block title %}Contact Our Admin{% endblock %}
{% block css %}
<head>
    <meta charset="utf-8">
    <title>Al3ab</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="{{ asset('front_office/img/Al3ab/al3ab_blanc.png') }}" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="{{ asset('back_office/lib/owlcarousel/assets/owl.carousel.min.css') }}" rel="stylesheet">
    <link href="{{ asset('back_office/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css')}}" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="{{ asset('back_office/css/bootstrap.min.css')}}" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href=("{{ asset('back_office/css/style.css')}}" rel="stylesheet">
    {% endblock %}

    {% block body %}

    <div class="form-container ">
        {{form_start(form,{'attr':{'novalidate': 'novalidate'}})}}
        <div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <a href="{{ path('front') }}" class="" >
                                <h3 class="text-primary"><img src="{{ asset('front_office/img/Al3ab/al3ab_blanc.png') }} " width="60%" height="60%" style="margin-left: 70px">Contact Our Admin</h3>
                            </a>
                        </div>
                        <div class="form-floating mb-3">
                            {{ form_row(form.sujet, {attr: {'class': 'form-control'}}) }}

                        </div>
                        <div class="form-floating mb-3">
                            {{form_row(form.contenue, {attr: {'class': 'form-control'}}) }}
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Register</button>
                        </div>
                        {{ form_end(form,{'attr':{'class':'container-fluid'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}