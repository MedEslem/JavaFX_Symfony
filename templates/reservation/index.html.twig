            </div>
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                    <tr class="text-white">
                        <th scope="col">IdReservation</th>
                        <th scope="col">DateReservation</th>
                        <th scope="col">ModePaiement</th>
                        <th scope="col">Event</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for reservation in reservations  %}
                    <tr class="text-white">
                        <td>{{ reservation.IdReservation}}</td>
                        <td>{{ reservation.DateReservation ? reservation.DateReservation|date('Y-m-d H:i:s') : '' }}</td>

                        <td>{{  reservation.ModePaiement }}</td>
                        <td>{{  reservation.Event }}</td>

                        <td>
                            <a href="{{ path('app_reservation_delete', {'id_reservation': reservation.IdReservation}) }}" onClick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                            <a href="{{ path('app_reservation_edit', {'id_reservation': reservation.IdReservation}) }}">edit</a>
                        </td>
                    </tr>
                    </tbody>
                    {% else %}
                        <tr>
                            <td colspan="7">no records found</td>
                        </tr>
                    {% endfor %}
                </table>
                </tbody>
                </table>
            </div>
            <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
            <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
            <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
            <script>
                $(document).ready(function () {
                    $('#searchButton').click(function () {
                        var searchQuery = $('#example-search-input').val().toLowerCase();
                        var noUsersRow = $('#noUsersRow');

                        // Loop through each user row and show/hide based on the search query
                        $('.text-white').each(function () {
                            var userRowText = $(this).text().toLowerCase();

                            // If the search query is found in the user row, show it; otherwise, hide it
                            $(this).toggle(userRowText.includes(searchQuery));
                        });

                        // Show/hide the "No Users Found" row based on search results
                        noUsersRow.toggle($('.text-white:visible').length === 0);
                    });
                });
            </script>
