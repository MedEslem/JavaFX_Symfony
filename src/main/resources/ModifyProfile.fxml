<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ModifyProfile">
    <children>
        <ImageView fitHeight="598.0" fitWidth="1223.0" layoutY="-12.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@banner_bg.png" />
            </image>
        </ImageView>
        <ImageView fx:id="logoIMG" fitHeight="490.0" fitWidth="393.0" layoutX="91.0" layoutY="99.0" onMouseClicked="#ProfilePage" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@al3ab_blanc.png" />
            </image>
        </ImageView>
        <Text fill="WHITE" layoutX="571.0" layoutY="79.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Modify Your Profile" textAlignment="CENTER" wrappingWidth="393.0">
            <font>
                <Font name="System Bold" size="43.0" />
            </font>
        </Text>
      <Button fx:id="confirmIN" layoutX="662.0" layoutY="389.0" mnemonicParsing="false" onAction="#ModifierProfile" prefHeight="27.0" prefWidth="170.0" stylesheets="@style.css" text="Confirm" textFill="#ea0909" textOverrun="CLIP">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <TextField fx:id="emailIN" layoutX="650.0" layoutY="170.0" prefHeight="26.0" prefWidth="235.0" promptText="Email" styleClass="text-area" stylesheets="@style.css" />
      <TextField fx:id="usernameIN" layoutX="650.0" layoutY="204.0" prefHeight="26.0" prefWidth="235.0" promptText="Username" styleClass="text-area" stylesheets="@style.css" />
      <Button fx:id="uploadBTN" layoutX="797.0" layoutY="325.0" mnemonicParsing="false" onAction="#uploadIMG" stylesheets="@style.css" text="Upload">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <TextField fx:id="imgIN" layoutX="650.0" layoutY="324.0" prefHeight="26.0" prefWidth="114.0" promptText="Profile Image" />
      <PasswordField fx:id="passwordIN" layoutX="650.0" layoutY="237.0" prefHeight="26.0" prefWidth="235.0" promptText="Password" />
      <PasswordField fx:id="CpasswordIN" layoutX="650.0" layoutY="276.0" prefHeight="26.0" prefWidth="235.0" promptText="Confirm  Your Password" />
    </children>
</AnchorPane>
